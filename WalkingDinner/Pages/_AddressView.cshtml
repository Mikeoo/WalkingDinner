@model WalkingDinner.Models.Address

<div class="row">

    <div class="form-group col-md-8">
        <label asp-for="Street" class="control-label"></label>
        <input asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <div class="form-group col-md-2">
        <label asp-for="Number" class="control-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group col-md-2">
        <label asp-for="NumberSuffix" class="control-label"></label>
        <input asp-for="NumberSuffix" class="form-control" />
        <span asp-validation-for="NumberSuffix" class="text-danger"></span>
    </div>

</div>

<div class="row">

    <div class="form-group col-md-3">
        <label asp-for="ZipCode" class="control-label"></label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

</div>

<div class="form-group">
    <label asp-for="Place" class="control-label"></label>
    <input asp-for="Place" class="form-control" />
    <span asp-validation-for="Place" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Extra" class="control-label"></label>
    <textarea asp-for="Extra" class="form-control"></textarea>
    <span asp-validation-for="Extra" class="text-danger"></span>
</div>
